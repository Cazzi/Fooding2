<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:contentDescription="Photo"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_color="#d1b1b1"
            app:civ_fill_color="@color/colorAccent"
            android:foregroundGravity="center"
            android:layout_marginEnd="68dp"/>
        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:textSize="26sp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />
        <TextView
            android:id="@+id/address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant Address"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_below="@+id/name_text"
            android:textSize="26sp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />
        <TextView
            android:id="@+id/tel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telephone Number"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_below="@+id/address_text"
            android:textSize="26sp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />
        <TextView
            android:id="@+id/mail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_below="@+id/tel_text"
            android:textSize="26sp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />
        <TextView
            android:id="@+id/hour_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Work Hours"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_below="@+id/mail_text"
            android:textSize="26sp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra Info"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_below="@+id/hour_text"
            android:textSize="26sp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />
    </RelativeLayout>

</ScrollView>